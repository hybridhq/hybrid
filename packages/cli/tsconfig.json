{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist",
    "strict": false,
    "target": "ESNext",
    "module": "node16",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "templates"],
  "exclude": ["node_modules"]
}
